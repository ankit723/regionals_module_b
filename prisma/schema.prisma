generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Manufacturer {
  id  Int  @id
  name String
  country String
  website String?
  support_email String?
  active  Boolean
  models  Model[]
}

enum  CATEGORY{
  twowheeler
  threewheeler
  fourwheeler
  bus
}

model Model {
  id  Int  @id
  name  String
  manufacturer_id Int
  manufacturer Manufacturer @relation(fields: [manufacturer_id], references: [id])
  category  CATEGORY
  range   Int
  fastCharginTime Int?
  subsidyEligible   Boolean
  active  Boolean
}
